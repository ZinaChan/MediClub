@model IEnumerable<Department>;
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = "Department Page";
    var IsAdmin = base.User.IsInRole("Admin");

}

<h1>Departments List</h1>
<hr />
<div class="col mb-3">
    @if (IsAdmin)
    {
        <div class="row-cols-auto mb-3">
            <a asp-route="CreateDepartmentPage" class="btn-modern">Create new Department</a>
        </div>
    }
    <div class="row-cols-auto">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search by name" id="searchString"
                onkeypress="handleKeyPress(event)">
            <button type="button" class="btn btn-outline-primary" onclick="searchDepartment()">Search</button>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="no-departments">
        <img src="/images/sad-star.png" alt="No departments" class="sad-face" />
        <p>No departments available at the moment.</p>
    </div>
}
else
{
    <ol class="card-list">
        @foreach (var department in Model)
        {
            <li class="department-item">
                <a class="nav-link" asp-controller="Department" asp-action="DepartmentInfo"
                    asp-route-departmentId="@department?.Id">

                    <div class="department-details">
                        <p><strong>Department Name:</strong> @(department?.Name ?? "UNKNOWN")</p>
                    </div>
                </a>
                <br>
                @if (IsAdmin)
                {

                    <div class="department-actions">
                        <button class="update-btn btn-close-white" onclick="showUpdateForm('@department!.Id')">Update</button>
                        <button class="delete-btn btn-danger" onclick="deleteDepartment('@department!.Id')">Delete</button>
                    </div>
                }
            </li>
        }
    </ol>
}

@if (IsAdmin)
{
    <div id="updateForm" class="update-form" style="display:none;">
        <div class="card">
            <h3 class="card-header">Update Department</h3>
            <input type="hidden" id="departmentId">
            <div class="card-body">
                <div class="mb-3">
                    <label for="newName">Department Name:</label>
                    <input type="text" id="newName">
                </div>
                <div class="mb-3">
                    <button onclick="updateDepartment()">Save</button>
                    <button onclick="hideUpdateForm()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        function showUpdateForm(id) {
            fetchDepartmentAndUpdateForm(id);
        }

        function fetchDepartmentAndUpdateForm(id) {
            fetch(`/Department/Json/${id}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Failed to fetch department.');
                    }
                    return response.json();
                })
                .then(data => {
                    updateFormWithDepartmentData(data);
                })
                .catch(error => console.error('Error fetching department:', error));
        }

        function updateFormWithDepartmentData(data) {
            document.getElementById('departmentId').value = data.id;
            document.getElementById('newName').value = data.name;
            document.getElementById('updateForm').style.display = 'block';
        }

        function hideUpdateForm() {
            document.getElementById('updateForm').style.display = 'none';
        }

        function updateDepartment() {
            const departmentId = document.getElementById('departmentId').value;
            const name = document.getElementById('newName').value;

            const updatedDepartment = {
                id: departmentId,
                name: name
            };

            fetch(`/Department`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(updatedDepartment)
            })
                .then(response => {
                    if (response.ok) {
                        alert('Department updated successfully!');
                        hideUpdateForm();
                        window.location.reload();
                    } else {
                        alert('Failed to update department.');
                    }
                })
                .catch(error => console.error('Error updating department:', error));
        }

        function deleteDepartment(id) {
            if (confirm('Are you sure you want to delete this department?')) {
                fetch(`/Department/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => {
                        if (response.ok) {
                            alert('Department deleted successfully!');
                            window.location.reload();
                        } else {
                            alert('Failed to delete department.');
                        }
                    });
            }
        }
    </script>
}
<script>
    function searchDepartment() {
        const searchString = document.getElementById('searchString').value.trim().toLowerCase();
        const departmentItems = document.querySelectorAll('.department-item');

        departmentItems.forEach(item => {
            const departmentName = item.querySelector('.department-details p').textContent.trim().toLowerCase();

            if (departmentName.includes(searchString)) {
                item.style.display = '';
            } else {
                item.style.display = 'none';
            }
        });
    }

    function handleKeyPress(event) {
        if (event.key === 'Enter') {
            searchDepartment();
        }
    }
</script>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


