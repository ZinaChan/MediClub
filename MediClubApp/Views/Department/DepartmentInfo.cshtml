@model Department;
@{
    ViewData["Title"] = "Department Info Page";
}


<div class="infoContainer">
    <div class="department-details">
        <p>Department Name: @Model.Name </p>
    </div>
</div>

<style>
    .infoContainer {
        width: 80%;
        margin: auto;
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        margin-top: 50px;
        display: flex;
    }

    .department-details {
        flex-grow: 1;
        padding-right: 20px;
    }

    .department-details h2 {
        margin-top: 0;
        color: #343a40;
    }

    .department-details p {
        margin: 5px 0;
        color: #6c757d;
    }
</style>