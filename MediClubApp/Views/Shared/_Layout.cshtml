@{
    var IsAuthenticated = base.User.Identity?.IsAuthenticated ?? false;
   
    var firstnameCookie = base.User.Claims.FirstOrDefault(claim => claim.Type == ClaimTypes.Name); 
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediClubApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MediClubApp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MediClubApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Doctor" asp-action="Index">Doctors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Patient" asp-action="Index">Patients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Department" asp-action="Index">Department</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Specialization"
                                asp-action="Index">Specialization</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Room" asp-action="Index">Room</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MedicalRecord"
                                asp-action="Index">MedicalRecord</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Appointment"
                                asp-action="Index">Appointment</a>
                        </li>
                        <li class="nav-item justify-content-end">
                            <a class="nav-link text-dark" asp-controller="User" asp-action="Index">User</a>
                        </li>
                        <li class="nav-item justify-content-end">
                            <a class="nav-link text-dark" asp-controller="Identity" asp-action="Log">Log</a>
                        </li>
                    </ul>
                    @if (IsAuthenticated)
                    {
                        <ul class="navbar-nav ">

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Welcome,  @firstnameCookie.Value 
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-route="UserInfo">Account</a> </li>
                                    <li>  <hr class="dropdown-divider"> </li>
                                    <li><a class="dropdown-item" asp-route="LogOut">Logout</a></li>
                                </ul>
                            </li>
                        </ul>

                    }
                    else
                    {
                        <ul class="navbar-nav ">
                            <li class="nav-item justify-content-end">
                                <a class="nav-link text-dark" asp-route="LoginView">Login</a>
                            </li>
                            <li class="nav-item justify-content-end">
                                <a class="nav-link text-dark" asp-route="RegistrationView">Registration</a>
                            </li>
                        </ul>
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MediClubApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
