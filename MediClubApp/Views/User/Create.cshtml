@model User
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = "Create User Page";
}

<form asp-route="CreateUserApi" method="post" enctype="multipart/form-data">
    <div class="custom-file mb-3">
        <label class="custom-file-label" asp-for="AvatarUrl">Avatar Image</label>
        <input asp-for="AvatarUrl" type="file" class="custom-file-input">
        <span class="d-block text-danger" asp-validation-for="AvatarUrl"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" type="text" class="form-control">
        <span class="d-block text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" type="text" class="form-control">
        <span class="d-block text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender">Gender:</label>
        <select asp-for="Gender" class="form-control">
            <option value="">Select Gender</option>
            @foreach (var gender in Enum.GetValues(typeof(Gender)))
            {
                <option value="@gender">@gender</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="Gender"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth">Date of Birth:</label>
        <input asp-for="DateOfBirth" type="date" class="form-control">
        <span class="text-danger" asp-validation-for="DateOfBirth"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number:</label>
        <input asp-for="PhoneNumber" type="tel" class="form-control">
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <input asp-for="Address" type="text" class="form-control">
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email address:</label>
        <input asp-for="Email" type="email" class="form-control">
        <span class="d-block text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" type="password" class="form-control">
        <span class="d-block text-danger" asp-validation-for="Password"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<style>
    h1 {
        color: #333;
    }

    form {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    form div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input[type="text"],
    input[type="date"],
    input[type="email"],
    input[type="password"],
    select,
    textarea {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    button {
        background-color: #5cb85c;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
    }

    button:hover {
        background-color: #4cae4c;
    }

    .custom-file-input {
        cursor: pointer;
    }

    .custom-file-label::after {
        content: "Browse";
    }
</style>
