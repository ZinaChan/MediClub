@model Specialization;
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = "Specialization Info Page";
}

<div class="info-container">
    <div class="specialization-details">
        <h2>Specialization Details</h2>
        <div class="detail-item">
            <span class="detail-label">Specialization Name:</span>
            <span class="detail-value">@Model.Name</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Department:</span>
            <span class="detail-value">@Model.Department.Name</span>
        </div>

        <br />
        @if (Model.Doctors != null && Model.Doctors.Any())
        {
            <h2>Doctors in this Specialization</h2>
            <ul>
                @foreach (var doctor in Model.Doctors)
                {
                    <li>
                        <a class="nav-link" asp-controller="Doctor" asp-action="DoctorInfo" asp-route-doctorId="@doctor.Id">
                            @doctor.FirstName @doctor.LastName
                        </a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No doctors found in this specialization.</p>
        }
    </div>
</div>

<style>
    .info-container {
        width: 80%;
        margin: auto;
        background-color: #f8f9fa;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        margin-top: 50px;
    }

    .specialization-details {
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .specialization-details h2 {
        color: #343a40;
        font-size: 24px;
        margin-top: 0;
        margin-bottom: 10px;
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 10px;
    }

    .detail-item {
        margin-bottom: 15px;
    }

    .detail-label {
        font-weight: bold;
        color: #6c757d;
        display: inline-block;
        width: 150px;
    }

    .detail-value {
        color: #495057;
    }
</style>
